# Environment Configuration Template
# Copy this file to .env and fill in your values

# Cloudflare R2 Configuration
R2_ACCESS_KEY=your_r2_access_key_here
R2_SECRET_KEY=your_r2_secret_key_here
R2_BUCKET=your_bucket_name
R2_ENDPOINT=https://your_account_id.r2.cloudflarestorage.com
R2_PUBLIC_URL=https://your-public-domain.com

# Better Uptime Heartbeat (Optional)
# Get your heartbeat URL from: https://betteruptime.com/team/TEAM_ID/heartbeats
HEARTBEAT_URL=

# Slack Webhook (Optional - for alerts)
SLACK_WEBHOOK_URL=

# Environment
ENV=production
